        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubTaskName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Task.Headline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsComplete)
        </td>

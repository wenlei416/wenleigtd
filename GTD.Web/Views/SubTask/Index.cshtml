@model IEnumerable<GTD.Models.SubTask>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubTaskName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task.Headline)
        </th>
        <th>
